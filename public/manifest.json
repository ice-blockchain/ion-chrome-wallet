{
  "name": "ION Wallet",
  "short_name": "ION Wallet",
  "description": "ION Wallet in your Browser",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "ION Wallet"
  },
  "icons": {
    "16": "ion-logo16.png",
    "48": "ion-logo48.png",
    "128": "ion-logo128.png"
  },
  "permissions": [
    "proxy",
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "provider.js"
      ],
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
